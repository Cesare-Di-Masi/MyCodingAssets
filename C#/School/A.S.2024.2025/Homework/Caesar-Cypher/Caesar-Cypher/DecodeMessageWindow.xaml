<Window x:Class="Caesar_Cypher.DecodeMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caesar_Cypher"
        mc:Ignorable="d"
        Title="DecodeMessageWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblCodeMessageTitle" Content="Decode Message" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="232" Margin="332,10,0,0" FontWeight="Bold" FontSize="22"/>
        <Label x:Name="lblWriteYourMessage" Content="Write your message" HorizontalAlignment="Left" Margin="216,108,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDecodedMessage" Content="--------------" HorizontalAlignment="Left" Margin="354,238,0,0" VerticalAlignment="Top" Height="45" Width="119" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="lblWriteYourKey" Content="Write your key" HorizontalAlignment="Left" Margin="244,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.294,0.692"/>
        <TextBox x:Name="txtWriteYourMessage" HorizontalAlignment="Left" Margin="370,116,0,0" TextWrapping="Wrap" Text="Write here" VerticalAlignment="Top" Width="120" GotFocus="removeText" LostFocus="giveText"/>
        <TextBox x:Name="txtWriteYourKey" HorizontalAlignment="Left" Margin="370,172,0,0" TextWrapping="Wrap" Text="Write here" VerticalAlignment="Top" Width="120" GotFocus="removeText" LostFocus="giveText"/>
        <Button Content="Decode" HorizontalAlignment="Left" Margin="332,299,0,0" VerticalAlignment="Top" Height="82" Width="163" Click="DecodeMessage"/>
        <Button Content="Home" HorizontalAlignment="Left" Margin="34,307,0,0" VerticalAlignment="Top" Height="74" Width="144" Click="Button_Click"/>

    </Grid>
</Window>
