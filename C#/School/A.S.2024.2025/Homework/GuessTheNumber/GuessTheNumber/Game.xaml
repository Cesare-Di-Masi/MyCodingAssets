<Window x:Class="GuessTheNumber.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheNumber"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid HorizontalAlignment="Center">
        <Label x:Name="lblWinOrLost" Content="Label" Margin="0,41,0,0" VerticalAlignment="Top" Height="63" Width="310" FontSize="30" FontWeight="Bold" Visibility="Hidden" />
        <Label x:Name="lblNAttemptsLeft" Content="Label" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="75" Width="255" FontSize="20" FontWeight="Bold" />
        <Label x:Name="lblMinNumber" Content="1" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" />
        <Rectangle HorizontalAlignment="Center" Height="1" Margin="0,234,0,0" Stroke="Black" VerticalAlignment="Top" Width="555" />
        <Label x:Name="lblMaxNumber" Content="1" HorizontalAlignment="Left" Margin="411,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" />
        <TextBox x:Name="txtGuessNumber" HorizontalAlignment="Center" Margin="0,205,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="71" FontSize="20" FontWeight="Bold" Height="29" />
    </Grid>
</Window>