<Window x:Class="GuessTheNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name ="lblTitle" Content="GUESS THE NUMBER" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="51" Width="224" FontSize="20" FontWeight="Bold" />
        <Label x:Name ="lblNumberOfAttempts" Content="Write the number of attempts " HorizontalAlignment="Left" Margin="198,173,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtNumberOfAttempts" HorizontalAlignment="Left" Margin="417,181,0,0" TextWrapping="Wrap" Text="Write here the attempts" VerticalAlignment="Top" Width="155" GotFocus="DeleteContent" />
        <Label x:Name ="lblMaxNumber" Content="Write the max number to guess" HorizontalAlignment="Left" Margin="192,199,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtMaxNumber" HorizontalAlignment="Left" Margin="417,203,0,0" TextWrapping="Wrap" Text="Write here the max number" VerticalAlignment="Top" Width="155" GotFocus="DeleteContent" />
        <Button x:Name="btnConfirmSettings" Content="Confirm settings" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Height="93" Width="224" FontWeight="Bold" FontSize="20" Click="btnConfirmSettings_Click" />
    </Grid>
</Window>