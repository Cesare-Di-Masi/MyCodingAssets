<Window x:Class="EsempioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ristorante" Height="450" Width="800"  Background="#FF009CFF">
    <Grid>
        <Label x:Name="lblRistorante" Content="RISTORANTE" HorizontalAlignment="Center" Height="70" Margin="0,10,0,0" VerticalAlignment="Top" Width="733" />
        <Button x:Name="btnEsempio"  Content="inizializza ristorante" HorizontalAlignment="Left" Margin="157,193,0,0" VerticalAlignment="Top" Height="87" Width="224" Click="btnEsempio_Click" />

        <TextBox x:Name="txtNome" Text="inserire il nome del ristorante" ToolTip="inserire il nome del ristorante" HorizontalAlignment="Left" Margin="157,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" Height="26" GotFocus="DeleteContent" />
        <Label Content="Nome" HorizontalAlignment="Left" Margin="96,80,0,0" VerticalAlignment="Top" Width="56" />
        <TextBox x:Name="txtTavoli" ToolTip="inserire il numero di tavoli nel ristorante" HorizontalAlignment="Left" Margin="157,111,0,0" TextWrapping="Wrap" Text="inserire il numero di tavoli del ristorante" VerticalAlignment="Top" Width="304" Height="26" GotFocus="DeleteContent" />
        <Label Content="N tavoli" HorizontalAlignment="Left" Margin="96,111,0,0" VerticalAlignment="Top" Width="56" />
        <Button Content="Reset" x:Name="btnReset" HorizontalAlignment="Left" Height="87" Margin="483,193,0,0" VerticalAlignment="Top" Width="221" Click="DeleteContent" />
    </Grid>
</Window>