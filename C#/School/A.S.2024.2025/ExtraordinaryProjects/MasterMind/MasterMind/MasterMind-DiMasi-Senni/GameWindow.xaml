<Window x:Class="MasterMind_DiMasi_Senni.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind_DiMasi_Senni"
        mc:Ignorable="d"
        Title="GameWindow" Height="600" Width="800">
    <Grid x:Name="gridGame" Background="#FF9E622F">
        <Rectangle Stroke="#FF5D8A28" Margin="0,0,710,30" OpacityMask="Black" Fill="#FF5D8A28" />
        <Button x:Name="btnMenù" Content="Menù" HorizontalAlignment="Right" Margin="0,554,710,0" Panel.ZIndex="1" VerticalAlignment="Top" Height="30" Width="90" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" RenderTransformOrigin="0.511,1.468" />

        <Button x:Name="btnRiavvia" Content="Riavvia" HorizontalAlignment="Right" Margin="0,554,620,0" Panel.ZIndex="1" VerticalAlignment="Top" Height="30" Width="90" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" />
        <Rectangle Stroke="#FF5D8A28" Margin="355,0,355,0" OpacityMask="Black" Fill="#FF5D8A28" />
        <Label x:Name="lblGiuste" Content="Giuste " HorizontalAlignment="Left" Margin="90,525,0,30" Width="45" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494" BorderBrush="Black" />
        <Label x:Name="lblPosSbagliato" Content="Posto sbagliato " HorizontalAlignment="Left" Margin="145,524,0,31" Width="107" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494" />
        <Label x:Name="lblTurSbagliato" Content="Tutto sbagliato " HorizontalAlignment="Left" Margin="257,523,0,30" Width="98" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494" />
        <Rectangle Stroke="#FF5D8A28" Margin="780,0,0,0" OpacityMask="Black" Fill="#FF5D8A28" />
        <Rectangle Stroke="Black" Margin="445,473,20,69" OpacityMask="Black" Fill="Black" />
        <Button x:Name="btnMandaCombinazione" Content="Invia la combinazione" Panel.ZIndex="1" HorizontalAlignment="Right" Margin="0,548,52,0" VerticalAlignment="Top" Height="30" Width="269" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" RenderTransformOrigin="0.511,1.468" Click="btnMandaCombinazione_Click" />
        <Label x:Name="lblTuttoSbagliato1" Content="Cliccare sui colori per creare la combinazione" HorizontalAlignment="Left" Margin="472,513,0,41" Width="276" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" />
        <Label x:Name="lblValoreGiusto1" Content="Giusto 0" HorizontalAlignment="Left" Margin="90,472,0,71" Width="86" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Label x:Name="lblWrongValue1" Content="False" HorizontalAlignment="Left" Margin="269,472,0,72" Width="86" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Label x:Name="lblAlmostWRong1" Content="Sbagliato 0" HorizontalAlignment="Left" Margin="178,472,0,71" Width="86" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Rectangle Stroke="Black" Margin="445,0,20,550" OpacityMask="Black" Fill="Black" />
    </Grid>
</Window>